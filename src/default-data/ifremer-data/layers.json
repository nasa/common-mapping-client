{
    "layers": [
        {
            "id": "argo-discovery",
            "title": "Argo discovery",
            "type": "data",
            "handleAs": "vector_geojson_raster",
            "vectorStyle": "profile",
            "url": "http://bluecloud.odatis-ocean.fr/argo/api/monthly_argo_data?end_date={TIME_MAX}&output_format=geojson",
            "metadata": {
                "url": "default-data/ifremer-data/layer-metadata/argo_discovery.json",
                "handleAs": "json"
            },
            "thumbnailImage": "img/argo_discovery_thumbnail.png",
            "bindingParameter":"selected_parameter",
            "updateParameters": {
                "time": true,
                "filters": {
                   "selected_parameter" : {
                        "label": "Select parameter",
                        "property":"selectedParameterMax",
                        "value": "",
                        "list": [
                            {"palette":"sea-surface-temp-ifremer", "label":"Sea water temperature","code":"35"},
                            {"palette":"sea-surface-psal-ifremer","label":"Sea water salinity","code":"30"}
                        ],
                        "type": "select"
                    }
                }
            },
            "palette": {
                "name": "sea-surface-temp-ifremer",
                "handleAs": "json-fixed",
                "min": 0,
                "max": 32
            },
            "mapping": {
                "title": "platformCode",
                "subtitle": "dateEnd",
                "properties": {
                    "platformCode" : "Platform code",
                    "platformDescription": "Platform description",
                    "platformName": "Platform name" ,
                    "platformType": "Platform type",
                    "parameterDescription": ["Parameter code", "description", "max", "min", "qc", "unit"]
                },
                "data": {
                    "label": "To profile data",
                    "link": "https://co-insitucharts.ifremer.fr/station/{IDENTIFIER}/",
                    "identifier": { "code": "stationIds", "type": "array" }
                }
            }
        },
        {
            "id": "NRTOA_temp_WMTS",
            "title": "(wmts) NRT insitu objective analysis : sea water temperature",
            "type": "data",
            "handleAs": "wmts_raster",
            "mappingOptions": {
                "matrixSet": "EPSG4326",
                "url": "https://bluecloud.ifremer.fr/nexus/imaging/wmts",
                "projection": "EPSG:4326",
                "depth": 0.0,
                "layer": "CORIOLIS_GLOBAL_NRTOA_OBS_TIME_SERIE_TEMP",
                "tileGrid": {
                    "matrixIds": [0, 1, 2, 3, 4, 5],
                    "tileSize": 512
                },
                "urlFunctions": {
                    "openlayers": "kvpTimeParam_wmts",
                    "cesium": "kvpTimeParam_wmts"
                }
            },
            "palette": {
                "handleAs": "image",
                "url": "img/NRTOA_TEMP_colorbar.png"
            }
        },
        {
            "id": "NRTOA_temp",
            "title": "NRT insitu objective analysis : sea water temperature",
            "type": "data",
            "handleAs": "wms_raster",
            "timeFormat": "YYYY-MM-DDThh:mm:ss",
            "metadata": {
                "url": "default-data/ifremer-data/layer-metadata/nrtoa.json",
                "handleAs": "json"
            },
            "thumbnailImage": "img/nrtoa_thumbnail.png",
            "mappingOptions": {
                "url": "https://www.ifremer.fr/erddap/wms/CORIOLIS_GLOBAL_NRTOA_OBS_TIME_SERIE_TEMP/request",
                "projection": "EPSG:4326",
                "width": 2048,
                "depth": 0.0,
                "layer": "CORIOLIS_GLOBAL_NRTOA_OBS_TIME_SERIE_TEMP:TEMP",
                "urlFunctions": {
                    "openlayers": "kvpTimeParam_wms",
                    "cesium": "kvpTimeParam_wms"
                }
            },
            "palette": {
                "handleAs": "image",
                "url": "img/NRTOA_TEMP_colorbar.png"
            }
        },
        {
            "id": "NRTOA_psal",
            "title": "NRT insitu objective analysis : sea water salinity",
            "type": "data",
            "handleAs": "wms_raster",
            "timeFormat": "YYYY-MM-DDThh:mm:ss",
            "metadata": {
                "url": "default-data/ifremer-data/layer-metadata/nrtoa.json",
                "handleAs": "json"
            },
            "thumbnailImage": "img/nrtoa_thumbnail.png",
            "mappingOptions": {
                "url": "https://www.ifremer.fr/erddap/wms/CORIOLIS_GLOBAL_NRTOA_OBS_TIME_SERIE_PSAL/request",
                "projection": "EPSG:4326",
                "width": 2048,
                "depth": 0.0,
                "layer": "CORIOLIS_GLOBAL_NRTOA_OBS_TIME_SERIE_PSAL:PSAL",
                "urlFunctions": {
                    "openlayers": "kvpTimeParam_wms",
                    "cesium": "kvpTimeParam_wms"
                }
            },
            "palette": {
                "handleAs": "image",
                "url": "img/NRTOA_PSAL_colorbar.png"
            }
        },
        {
            "id": "IFR-L4-SSTfnd-ODYSSEA-GLOB_010",
            "title": "Odyssea GHRSST Analysis",
            "type": "data",
            "handleAs": "wms_raster",
            "timeFormat": "YYYY-MM-DDThh:mm:ssZ",
            "metadata": {
                "url": "default-data/ifremer-data/layer-metadata/odyssea.json",
                "handleAs": "json"
            },
            "thumbnailImage": "img/odyssea_thumbnail.png",
            "mappingOptions": {
                "url": "https://www.ifremer.fr/erddap/wms/IFR-L4-SSTfnd-ODYSSEA-GLOB_010/request",
                "projection": "EPSG:4326",
                "layer": "IFR-L4-SSTfnd-ODYSSEA-GLOB_010:analysed_sst",
                "urlFunctions": {
                    "openlayers": "kvpTimeParam_wms",
                    "cesium": "kvpTimeParam_wms"
                }
            },
            "palette": {
                "handleAs": "image",
                "url": "img/IFR-L4-SSTfnd-ODYSSEA-GLOB_010_colorbar.png"
            }
        },
        {
            "id": "AMSR2_Surface_Precipitation_Rate_Day_EPSG4326",
            "title": "Surface Precipitation Rate (Day, AMSR2, GCOM-W1)",
            "type": "data",
            "handleAs": "GIBS_raster",
            "mappingOptions": {
                "matrixSet": "2km",
                "url": "https://map1a.vis.earthdata.nasa.gov/wmts-geo/wmts.cgi",
                "projection": "EPSG:4326",
                "layer": "AMSR2_Surface_Precipitation_Rate_Day",
                "tileGrid": {
                    "matrixIds": [0, 1, 2, 3, 4, 5],
                    "tileSize": 512
                },
                "urlFunctions": {
                    "openlayers": "kvpTimeParam_wmts",
                    "cesium": "kvpTimeParam_wmts"
                }
            }
        },
        {
            "id": "GHRSST_L4MUR",
            "title": "GHRSST L4MUR (Sea Surface Temperature)",
            "type": "data",
            "handleAs": "GIBS_raster",
            "mappingOptions": {
                "matrixSet": "1km",
                "url": "https://gibs-c.earthdata.nasa.gov/wmts/epsg4326/best/wmts.cgi",
                "projection": "EPSG:4326",
                "layer": "GHRSST_L4_MUR_Sea_Surface_Temperature",
                "tileGrid": {
                    "matrixIds": [0, 1, 2, 3, 4, 5],
                    "tileSize": 512
                },
                "urlFunctions": {
                    "openlayers": "kvpTimeParam_wmts",
                    "cesium": "kvpTimeParam_wmts"
                }
            }
        },
        {
            "id": "AMSR2_Surface_Precipitation_Rate_Night_EPSG4326",
            "title": "Surface Precipitation Rate (Night, AMSR2, GCOM-W1)",
            "type": "data",
            "handleAs": "GIBS_raster",
            "mappingOptions": {
                "matrixSet": "2km",
                "url": "https://map1a.vis.earthdata.nasa.gov/wmts-geo/wmts.cgi",
                "projection": "EPSG:4326",
                "layer": "AMSR2_Surface_Precipitation_Rate_Night",
                "tileGrid": {
                    "matrixIds": [0, 1, 2, 3, 4, 5],
                    "tileSize": 512
                },
                "urlFunctions": {
                    "openlayers": "kvpTimeParam_wmts",
                    "cesium": "kvpTimeParam_wmts"
                }
            }
        },
        {
            "id": "Reference_Labels",
            "title": "Reference Labels",
            "type": "reference",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        },
        {
            "id": "Reference_Features",
            "title": "Reference Features",
            "type": "reference",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        },
        {
            "id": "ESRI_World_Imagery",
            "title": "ESRI High Resolution World Imagery",
            "type": "basemap",
            "thumbnailImage": "img/ESRI_World_Imagery.jpeg",
            "isDefault": true,
            "handleAs": "xyz_raster",
            "updateParameters": { "time": false },
            "mappingOptions": {
                "projection": "EPSG:4326",
                "layer": "ESRI_World_Imagery",
                "url":
                    "https://wi.maptiles.arcgis.com/arcgis/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}.pbf",
                "tileGrid": {
                    "minZoom": 1,
                    "maxZoom": 16,
                    "tileSize": 512
                },
                "urlFunctions": {
                    "openlayers": "esriCustom512"
                }
            }
        },
        {
            "id": "BlueMarble_ShadedRelief_Bathymetry",
            "title": "Blue Marble, Shaded Relief w/Bathymetry",
            "type": "basemap",
            "thumbnailImage": "img/BlueMarble_ShadedRelief_Bathymetry.jpeg",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        },
        {
            "id": "OSM_Land_Water_Map",
            "title": "Land/Water Map (data from OSM)",
            "type": "basemap",
            "thumbnailImage": "img/OSM_Land_Water_Map.png",
