{
    "layers": [
        {
            "id": "argo-eov-data-raster",
            "title": "1 Month Argo EOV data discovery",
            "type": "data",
            "handleAs": "vector_geojson_raster",
            "vectorStyle": "profile",
            "url": "http://localhost:8080/api/eosc/geojson?start={TIME_MIN}&end={TIME_MAX}&bbox={BOUNDING_BOX}",
            "timeFormat": "X",
            "metadata": {
                "url": "default-data/eosc-data/layer-metadata/argo_eov_data.json",
                "handleAs": "json"
            },
            "thumbnailImage": "img/argo_eosc_thumbnail.png",
            "bindingParameter":"parameter",
            "updateParameters": {
                "time": true,
                "bbox": true,
                "filters": {
                    "parameter" : {
                        "label": "Select parameter",
                        "property":"parameter_value",
                        "value": "35",
                        "list": [
                            {"palette":"sea-surface-temp-ifremer", "label":"Sea temperature","code":"35"},
                            {"palette":"sea-surface-psal-ifremer","label":"Practical salinity","code":"30"},
                            {"palette":"sea-surface-doxy-ifremer","label":"Dissolved oxygen","code":"64"},
                            {"palette":"sea-surface-chlo-ifremer","label":"Chlorophyll-a","code":"65"},
                            {"palette":"sea-surface-ph-ifremer","label":"Ph","code":"124"},
                            {"palette":"sea-surface-turb-ifremer","label":"Turbidity","code":"135"},
                            {"palette":"sea-surface-cdom-ifremer","label":"Cdom","code":"169"},
                            {"palette":"sea-surface-no3-ifremer","label":"Nitrate (NO3-N)","code":"381"},
                            {"palette":"sea-surface-hs-ifremer","label":"Bisulfide (HS-)","code":"575"}
                        ],
                        "type": "select"
                    },
                    "depth" : {
                        "label": "Select depth",
                        "value": "0",
                        "list": [
                            {"label":"Sea surface","code":0},
                            {"label":"5 meters","code":5},
                            {"label":"10 meters","code":10},
                            {"label":"20 meters","code":20},
                            {"label":"30 meters","code":30},
                            {"label":"50 meters","code":50},
                            {"label":"75 meters","code":75},
                            {"label":"100 meters","code":100},
                            {"label":"125 meters","code":125},
                            {"label":"150 meters","code":150},
                            {"label":"200 meters","code":200},
                            {"label":"250 meters","code":250},
                            {"label":"300 meters","code":300},
                            {"label":"400 meters","code":400},
                            {"label":"500 meters","code":500},
                            {"label":"600 meters","code":600},
                            {"label":"700 meters","code":700},
                            {"label":"800 meters","code":800},
                            {"label":"900 meters","code":900},
                            {"label":"1000 meters","code":1000},
                            {"label":"1100 meters","code":1100},
                            {"label":"1200 meters","code":1200},
                            {"label":"1300 meters","code":1300},
                            {"label":"1400 meters","code":1400},
                            {"label":"1500 meters","code":1500},
                            {"label":"2000 meters","code":2000},
                            {"label":"2500 meters","code":2500},
                            {"label":"3000 meters","code":3000},
                            {"label":"3500 meters","code":3500},
                            {"label":"4000 meters","code":4000},
                            {"label":"4500 meters","code":4500},
                            {"label":"5000 meters","code":5000},
                            {"label":"5500 meters","code":5500},
                            {"label":"6000 meters","code":6000}

                        ],
                        "type": "select"
                    }
                 }
            },
            "palette": {
                "name": "sea-surface-temp-ifremer",
                "handleAs": "json-fixed",
                "min": 0,
                "max": 32
            },
            "mapping": {
                "title": "platform_code",
                "subtitle": "station_date",
                "properties": {
                    "parameter_code" : "Parameter code",
                    "parameter_value": "Parameter value",
                    "z_level": "depth level" ,
                    "z_value": "real depth"
                },
                "data": {
                    "label": "To profile data",
                    "link": "https://co-insitucharts.ifremer.fr/station/{IDENTIFIER}/",
                    "identifier": { "code": "station_id", "type": "number" }
                }
            }
        },
        {
            "id": "GHRSST_L4MUR",
            "title": "GHRSST L4MUR (Sea Surface Temperature)",
            "type": "data",
            "handleAs": "GIBS_raster",
            "isDefault": true,
            "mappingOptions": {
                "matrixSet": "1km",
                "url": "https://gibs-c.earthdata.nasa.gov/wmts/epsg4326/best/wmts.cgi",
                "projection": "EPSG:4326",
                "layer": "GHRSST_L4_MUR_Sea_Surface_Temperature",
                "tileGrid": {
                    "matrixIds": [0, 1, 2, 3, 4, 5],
                    "tileSize": 512
                },
                "urlFunctions": {
                    "openlayers": "kvpTimeParam_wmts",
                    "cesium": "kvpTimeParam_wmts"
                }
            },
            "palette": {
                "name": "GIBS_SST",
                "handleAs": "json-fixed"
            },
            "thumbnailImage": "img/GHRSST_L4_G1SST_Sea_Surface_Temperature.png"
        },
        {
            "id": "MODIS_Terra_Brightness_Temp_Band31_Day",
            "title": "Brightness Temperature",
            "type": "data",
            "handleAs": "GIBS_raster",
            "min": 180.0,
            "max": 340.0,
            "units": "ËšK",
            "mappingOptions": {
                "urlFunctions": {
                    "openlayers": "kvpTimeParam_wmts",
                    "cesium": "kvpTimeParam_wmts"
                }
            },
            "metadata": {
                "url": "default-data/_core_default-data/layer-metadata/MODIS_Terra_Brightness_Temp_Band31_Day.json",
                "handleAs": "json"
            },
            "palette": {
                "name": "brightness-temp",
                "handleAs": "json-fixed"
            },
            "thumbnailImage": "img/MODIS_Terra_Brightness_Temp_Band31_Day.png"
        },
        {
            "id": "Reference_Labels",
            "title": "Reference Labels",
            "type": "reference",
            "handleAs": "GIBS_raster",
            "updateParameters": {
                "time": false
            }
        },
        {
            "id": "Reference_Features",
            "title": "Reference Features",
            "type": "reference",
            "handleAs": "GIBS_raster",
            "updateParameters": {
                "time": false
            }
        },
        {
            "id": "ESRI_World_Imagery",
            "title": "ESRI High Resolution World Imagery",
            "type": "basemap",
            "thumbnailImage": "img/ESRI_World_Imagery.jpeg",
            "isDefault": true,
            "handleAs": "xyz_raster",
            "updateParameters": { "time": false },
            "mappingOptions": {
                "projection": "EPSG:4326",
                "layer": "ESRI_World_Imagery",
                "url":
                    "https://wi.maptiles.arcgis.com/arcgis/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}.pbf",
                "tileGrid": {
                    "minZoom": 1,
                    "maxZoom": 16,
                    "tileSize": 512
                },
                "urlFunctions": {
                    "openlayers": "esriCustom512"
                }
            }
        },
        {
            "id": "BlueMarble_ShadedRelief_Bathymetry",
            "title": "Blue Marble, Shaded Relief w/Bathymetry",
            "type": "basemap",
            "thumbnailImage": "img/BlueMarble_ShadedRelief_Bathymetry.jpeg",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        },
        {
            "id": "OSM_Land_Water_Map",
            "title": "Land/Water Map (data from OSM)",
            "type": "basemap",
            "thumbnailImage": "img/OSM_Land_Water_Map.png",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        },
        {
            "id": "ASTER_GDEM_Color_Shaded_Relief",
            "title": "Digital Elevation Map (Color Shaded Relief)",
            "type": "basemap",
            "thumbnailImage": "img/ASTER_GDEM_Color_Shaded_Relief.jpeg",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        }
    ]
}
